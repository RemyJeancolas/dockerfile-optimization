{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true
  },
  "exclude": [
    "node_modules"
  ]
}
